---
import CurvedLines from "../components/CurvedLines.astro";
---

<section
  class="relative min-h-[100dvh] flex flex-col justify-center items-center text-center px-6 overflow-hidden"
>
  <!-- Video de fondo -->
  <video
    src="/public/video-home.mp4"
    class="absolute inset-0 w-full h-full object-cover block opacity-20"
    autoplay
    muted
    loop
    playsinline
  >
  </video>

  <!-- Contenido centrado -->
  <div class="space-y-10 relative z-10">
    <div class="space-y-4">
      <h1 class="text-8xl font-medium leading-tight">
        AI-Powered Automation <br />
        <span class="text-primary">for Modern Teams</span>
      </h1>

      <p class="text-text-secundary font-medium">
        Streamline operations, boost productivity, and scale smarter with
        Calisto.
      </p>
    </div>

    <div class="max-w-fit mx-auto">
      <a href="#pricing" class="cta-circle">
        <span>Get Started</span>
      </a>
    </div>
  </div>

  <div
    class="absolute bottom-0 left-0 w-full h-40 pointer-events-none bg-gradient-to-b from-transparent to-[#F5F5F5]"
  >
  </div>
</section>


